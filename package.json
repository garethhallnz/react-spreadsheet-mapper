{
  "name": "spreadsheet-mapper-monorepo",
  "version": "0.1.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest run --config ./vitest.config.ts",
    "test:watch": "vitest --config ./vitest.config.ts",
    "test:coverage": "vitest run --coverage --config ./vitest.config.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:tsc": "tsc --noEmit",
    "clean": "rm -rf coverage",
    "release": "standard-version",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "start": "node scripts/start-example.js",
    "start:example:minimal": "npm run dev --workspace=examples/minimal",
    "start:example:material-ui": "npm run dev --workspace=examples/material-ui",
    "start:example:ant-design": "npm run dev --workspace=examples/ant-design",
    "start:example:flowbite-react": "npm run dev --workspace=examples/flowbite-react",
    "start:example:mantine": "npm run dev --workspace=examples/mantine",
    "start:example:react-bootstrap": "npm run dev --workspace=examples/react-bootstrap",
    "start:example:shadcn-ui": "npm run dev --workspace=examples/shadcn-ui",
    "start:example:advanced": "npm run dev --workspace=examples/advanced"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.5",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^17.0.53",
    "@types/react-dom": "^17.0.18",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "inquirer": "^9.2.12",
    "jsdom": "^24.1.0",
    "remap-istanbul": "^0.13.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.13",
    "vitest": "^2.0.4"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "keywords": [
    "monorepo",
    "spreadsheet",
    "react",
    "mapping",
    "headless",
    "excel",
    "csv",
    "import",
    "typescript"
  ]
}
